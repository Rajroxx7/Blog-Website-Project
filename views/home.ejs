<%- include("partials/header"); -%>

<%  posts.forEach(function(post){ %>

<h1><%=post.title%></h1>
<p>
  <%=post.content.substring(0, 175) + " ..."%>
<div class="btns">
  <a href="/posts/<%=post._id%>" class="btn btn-primary" role="button">Read More</a>
  <a href="/update/<%=post._id%>" class="btn btn-primary" role="button">Update</a>
  <a href="/delete/<%=post._id%>" class="btn btn-primary" role="button">Delete</a>
</div>
</p>
<hr class="rule">

<% }) %>

<%- include("partials/footer"); -%>
